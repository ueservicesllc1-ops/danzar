rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir lectura y escritura si el usuario está autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir lectura para administradores
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'developer'];
      
      // Permitir escritura para administradores (para cambiar roles)
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'developer'];
    }
    
    // Reglas para la colección de tickets
    match /tickets/{ticketId} {
      // Permitir lectura pública para verificar asientos ocupados
      allow read: if true;
      
      // Permitir creación pública (cualquiera puede comprar entradas sin autenticación)
      allow create: if true;
      
      // Permitir actualizar solo los campos 'used' y 'usedAt' sin autenticación (para escaneo en puerta)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['used', 'usedAt']);
      
      // Permitir actualización completa solo a administradores (para verificar pagos y otros cambios)
      allow update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'developer'];
    }
    
    // Reglas para otras colecciones
    match /{document=**} {
      // Permitir acceso a usuarios autenticados
      allow read, write: if request.auth != null;
    }
  }
}
